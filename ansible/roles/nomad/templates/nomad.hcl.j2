datacenter = "dc1"
data_dir   = "{{ nomad_data_dir }}"
bind_addr  = "0.0.0.0"

plugin "docker" {
  config {
    volumes {
      enabled = true
    }
  }
}

ui {
  enabled = true
}

{% if setup_vault_integration %}
# vault token set as env variable
vault {
  enabled = true
  address = "{{ nomad_vault_addr }}"
  create_from_role = "nomad_cluster"
  tls_skip_verify = true
}
{% endif %}
